generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  name         String?
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())

  context UserContext? // ðŸ‘ˆ Back-reference
}

model UserContext {
  id                   String   @id @default(uuid())
  userId               String   @unique
  preferredGenres      String[]
  recentSearches       String[]
  likedRecommendations String[]
  recommendations      Recommendation[] // 1-to-many relation
  user                 User     @relation(fields: [userId], references: [id])
}

model Recommendation {
  id           String   @id @default(uuid())
  title        String
  reason       String   // why it was recommended (optional)
  userContext  UserContext @relation(fields: [userContextId], references: [id])
  userContextId String
  createdAt    DateTime @default(now())
}
